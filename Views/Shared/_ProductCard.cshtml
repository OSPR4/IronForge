@model Product

<div class="container" @*style="display: flex;"*@>
    <div class="row">
        <div class="col-md-3 col-sm-6">
            <div class="product-grid">
                <div class="product-image">
                    <a >
                        <img src="@Url.Content(Model.ImageThumbnailUrl)" class="mx-auto d-block">
                    </a>
                </div>
                <div class="product-content">
                    <h3 class="title">@Model.Name</h3>

                    <div class="price">@Model.Price.ToString("c")</div>
                </div>
                <ul class="social">
                    <li><a asp-controller="Product" asp-action="Details" asp-route-id="@Model.ProductId" data-tip="View"><i class="fa fa-search"></i></a></li>
                    <li><a asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-productId="@Model.ProductId" data-tip="Add to Cart"><i class="fa fa-shopping-cart"></i></a></li>
                </ul>
            </div>

        </div>

    </div>
</div>
<hr>

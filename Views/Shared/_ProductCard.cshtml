@model Product



<div class="col-lg-3 col-md-6 col-sm-6 col-md-6 col-sm-6 mix new-arrivals">
    <div class="product__item">

        <a asp-controller="Product" asp-action="Details" asp-route-id="@Model.ProductId"> <div class="product__item__pic set-bg" data-setbg="@Url.Content(Model.ImageThumbnailUrl)">
        </div> </a>

        <div class="product__item__text">
            <h6>@Model.Name</h6>
            <a asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-productId="@Model.ProductId" class="add-cart">+ Add To Cart</a>

            <h5>@Model.Price.ToString("c")</h5>
        </div>
    </div>
</div>
@model IEnumerable<Category>

<li>
    <a asp-controller="Product" asp-action="List">Products</a>

    <ul class="dropdown">
        @foreach (var category in Model)
        {
            <li>
                <a asp-controller="Product" asp-action="List"
                   asp-route-category="@category.Name">@category.Name</a>
            </li>

        }
        <li class="dropdown-divider" style="color:red"></li>
        <li>
                    <a asp-controller="Product" asp-action="List" asp-route-Category="">View All Products</a>
        </li>

    </ul>
</li>


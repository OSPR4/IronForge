
@model Product

<div class="container">
    <div class="col-lg-9">
            <div class="card mt-4">
                <img class="card-img-top img-fluid" src="@Url.Content(Model.ImageUrl)" alt="">
                <div class="card-body">
                    <h3 class="card-title">@Model.Name</h3>
                    <h4>@Model.Price.ToString("c")</h4>
                    <p class="card-text">@Model.LongDescription</p>
                    <a class="btn btn-primary" asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-productId="@Model.ProductId" role="button">Add to Cart</a>


                </div>
        </div>
    </div>
</div>




